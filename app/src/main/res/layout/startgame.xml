<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CLSG"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".StartGame">


    <RelativeLayout
        android:id="@+id/RLcomputerChoice"
        android:layout_width="526dp"
        android:layout_height="649dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/computerTV"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/makeMove"
            android:textColor="@color/colorText"
            android:textSize="80px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/whatBWhat"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="66dp"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/colorText"
            android:textSize="70px"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/computerChoiceIMG"
            android:layout_width="411dp"
            android:layout_height="516dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="57dp"
            android:layout_marginLeft="57dp"
            android:layout_marginBottom="50dp"
            android:adjustViewBounds="true"
            android:padding="1dp"
            android:scaleType="fitCenter" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/PlayerChoice"
        android:layout_width="411dp"
        android:layout_height="530dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageButton
            android:id="@+id/Scissor"
            android:layout_width="140dp"
            android:layout_height="178dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="210dp"
            android:adjustViewBounds="true"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/humanlogo" />

        <ImageButton
            android:id="@+id/Paper"
            android:layout_width="123dp"
            android:layout_height="145dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="229dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:adjustViewBounds="true"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/paperlogo" />

        <ImageButton
            android:id="@+id/Rock"
            android:layout_width="150dp"
            android:layout_height="146dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="32dp"
            android:adjustViewBounds="true"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/covidlogo" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/restart"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/PlayerChoice">

        <ImageButton
            android:id="@+id/restartBtn"
            android:layout_width="169dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/playagain"
            app:layout_constraintBottom_toTopOf="@+id/Rules"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>